<%= render 'layouts/navigation' %>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active ">
      <img class="d-block w-100" src="https://res.cloudinary.com/inddev/image/upload/v1541187150/download-1.jpg" alt="First slide">
      <div class="carousel-caption d-none d-md-block">
	  	<h5>All the resources</h5>
      <p>Collected for your convenience!</p>
  	</div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://res.cloudinary.com/inddev/image/upload/v1541187543/download-2.png" alt="Second slide">
      <div class="carousel-caption d-none d-md-block">
	  	<h5>No more waiting for infomration</h5>
      <p>Everything just a few clicks away!</p>
  	</div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://res.cloudinary.com/inddev/image/upload/v1541187542/download-3.jpg" alt="Third slide">
      <div class="carousel-caption d-none d-md-block">
	  	<h5>Downloads Directory</h5>
      <p>Explore Now</p>
  	</div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<div class="downloads-selection-area">
<h5>What kind of download are you looking for?</h5>
<%= form_tag downloads_path, :method => 'get' do %>
	<%= collection_select :download, :category_id, Category.all, :id, :name, prompt: true %>
	<%= submit_tag "Filter" %>
<% end %>
</div>
<div class="filtered-files-area">
	
<p><strong>Downloads as per your current selection:-<br></strong></p>
<% @downloads.each do |d| %>
	<h4>File Name: <%= d.name %><br></h4>
	Category: <%= d.category.name %><br>
	<hr>
<% end %>
</div>

<%= render 'layouts/footer' %>